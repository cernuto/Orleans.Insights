@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IDashboardDataService DataService

<div class="dashboard @(_sidebarCollapsed ? "sidebar-collapsed" : "") @(_sidebarOpen ? "sidebar-open" : "")">
    @* Mobile header with hamburger menu *@
    <header class="mobile-header">
        <button class="hamburger-btn" @onclick="ToggleSidebar" aria-label="Toggle navigation">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                @if (_sidebarOpen)
                {
                    <line x1="18" y1="6" x2="6" y2="18"/>
                    <line x1="6" y1="6" x2="18" y2="18"/>
                }
                else
                {
                    <line x1="3" y1="6" x2="21" y2="6"/>
                    <line x1="3" y1="12" x2="21" y2="12"/>
                    <line x1="3" y1="18" x2="21" y2="18"/>
                }
            </svg>
        </button>
        <div class="mobile-logo">
            <!-- Orleans Official Logo (Mobile) - Narrow hexagonal gem -->
            <svg class="mobile-logo-icon" viewBox="0 0 60 100" xmlns="http://www.w3.org/2000/svg">
                <!-- Outer hexagon - narrower profile -->
                <polygon points="30,2 55,22 55,78 30,98 5,78 5,22" fill="#68217a"/>
                <!-- Left face - lighter for 3D effect -->
                <polygon points="5,22 30,2 30,50 5,78" fill="#783988"/>
                <!-- Right face - darker for depth -->
                <polygon points="30,50 55,22 55,78 30,98" fill="#68217a" opacity="0.85"/>
                <!-- Center gem cutout -->
                <polygon points="30,26 44,38 44,62 30,74 16,62 16,38" fill="#0d0d0d"/>
            </svg>
            <span class="logo-text">Orleans.Insights</span>
        </div>
    </header>

    @* Overlay for mobile when sidebar is open *@
    @if (_sidebarOpen)
    {
        <div class="sidebar-overlay" @onclick="CloseSidebar"></div>
    }

    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <!-- Orleans Official Logo - Narrow hexagonal gem like the official branding -->
                <svg class="logo-icon" viewBox="0 0 60 100" xmlns="http://www.w3.org/2000/svg">
                    <!-- Outer hexagon - narrower profile matching official Orleans logo -->
                    <polygon points="30,2 55,22 55,78 30,98 5,78 5,22" fill="#68217a"/>
                    <!-- Left face - lighter purple for 3D effect -->
                    <polygon points="5,22 30,2 30,50 5,78" fill="#783988"/>
                    <!-- Right face - darker for depth -->
                    <polygon points="30,50 55,22 55,78 30,98" fill="#68217a" opacity="0.85"/>
                    <!-- Top face highlight -->
                    <polygon points="30,2 55,22 30,50 5,22" fill="#8a4a9a" opacity="0.4"/>
                    <!-- Center gem cutout - creates the crystalline hollow -->
                    <polygon points="30,26 44,38 44,62 30,74 16,62 16,38" fill="#0d0d0d"/>
                </svg>
                <span class="logo-text">Orleans.Insights</span>
            </div>
            <button type="button" class="collapse-btn" @onclick="ToggleCollapse" @onclick:preventDefault="true" @onclick:stopPropagation="true" title="@(_sidebarCollapsed ? "Expand sidebar" : "Collapse sidebar")">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    @if (_sidebarCollapsed)
                    {
                        <polyline points="9 18 15 12 9 6"/>
                    }
                    else
                    {
                        <polyline points="15 18 9 12 15 6"/>
                    }
                </svg>
            </button>
        </div>
        <div class="connection-indicator @(DataService.IsConnected ? "connected" : "disconnected")">
            <span class="status-dot"></span>
            <span class="connection-text">@(DataService.IsConnected ? "Connected" : "Disconnected")</span>
        </div>
        <nav>
            <NavLink class="nav-item" href="" Match="NavLinkMatch.All" @onclick="CloseSidebar" title="Overview">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7" rx="1"/>
                    <rect x="14" y="3" width="7" height="7" rx="1"/>
                    <rect x="3" y="14" width="7" height="7" rx="1"/>
                    <rect x="14" y="14" width="7" height="7" rx="1"/>
                </svg>
                <span class="nav-text">Overview</span>
            </NavLink>
            <NavLink class="nav-item" href="orleans" @onclick="CloseSidebar" title="Grains">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="8" r="4"/>
                    <circle cx="4" cy="18" r="3"/>
                    <circle cx="20" cy="18" r="3"/>
                    <line x1="12" y1="12" x2="4" y2="15"/>
                    <line x1="12" y1="12" x2="20" y2="15"/>
                </svg>
                <span class="nav-text">Grains</span>
            </NavLink>
            <NavLink class="nav-item" href="insights" @onclick="CloseSidebar" title="Insights">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                    <polyline points="7.5 4.21 12 6.81 16.5 4.21"/>
                    <polyline points="7.5 19.79 7.5 14.6 3 12"/>
                    <polyline points="21 12 16.5 14.6 16.5 19.79"/>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                    <line x1="12" y1="22.08" x2="12" y2="12"/>
                </svg>
                <span class="nav-text">Insights</span>
            </NavLink>
        </nav>

        @* Collapsed state - show only logo icon at bottom *@
        <div class="collapsed-logo">
            <svg class="collapsed-logo-icon" viewBox="0 0 60 100" xmlns="http://www.w3.org/2000/svg">
                <!-- Orleans Official Logo (Collapsed) - Narrow gem -->
                <polygon points="30,2 55,22 55,78 30,98 5,78 5,22" fill="#68217a"/>
                <polygon points="5,22 30,2 30,50 5,78" fill="#783988"/>
                <polygon points="30,26 44,38 44,62 30,74 16,62 16,38" fill="#0d0d0d"/>
            </svg>
        </div>
    </aside>
    <main class="main-content">
        @Body
    </main>
</div>

<style>
    /* Logo styles - narrow hexagon aspect ratio (60:100 = 0.6:1) */
    .logo {
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .logo-icon {
        width: 19px;  /* 32px * 0.6 ratio for narrow hexagon */
        height: 32px;
        flex-shrink: 0;
    }

    .mobile-logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .mobile-logo-icon {
        width: 17px;  /* 28px * 0.6 ratio for narrow hexagon */
        height: 28px;
    }

    /* Collapsed sidebar logo */
    .collapsed-logo {
        display: none;
        justify-content: center;
        padding: 0.75rem 0;
        margin-top: auto;
        border-top: 1px solid var(--border);
    }

    .dashboard.sidebar-collapsed .collapsed-logo {
        display: flex;
    }

    .dashboard.sidebar-collapsed .logo {
        display: none;
    }

    .collapsed-logo-icon {
        width: 17px;  /* 28px * 0.6 ratio for narrow hexagon */
        height: 28px;
        opacity: 0.8;
    }

    /* Collapse button icon adjustment */
    .collapse-btn svg {
        width: 16px;
        height: 16px;
    }
</style>

@code {
    private bool _sidebarOpen;
    private bool _sidebarCollapsed;

    protected override void OnInitialized()
    {
        DataService.OnConnectionStateChanged += OnConnectionChanged;
    }

    private void OnConnectionChanged(bool connected)
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleSidebar() => _sidebarOpen = !_sidebarOpen;

    private void CloseSidebar() => _sidebarOpen = false;

    private void ToggleCollapse() => _sidebarCollapsed = !_sidebarCollapsed;
}
